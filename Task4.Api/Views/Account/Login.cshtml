@model Task4.Service.DTOs.UserForResultDto
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
            margin-top: 75px;
            padding: 20px;
            border-radius: 5px;
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 3px;
        }

        .btn-login {
            background-color: #007bff;
            color: #ffffff;
            border-radius: 3px;
            width: 100%;
        }

            .btn-login:hover {
                background-color: #0069d9;
            }

        .validation-summary-errors {
            color: red;
            margin-bottom: 10px;
        }

            .validation-summary-errors ul {
                list-style-type: none;
                padding: 0;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        .text-center {
            text-align: center;
        }

        .create-account-link {
            text-align: center;
            display: block;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2>Login</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary-errors">
                    <ul>
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-login">Login</button>
                </div>
            </form>

            <p class="text-center">Don't have an account? <a href="/Account/Registration">Create a new account</a></p>
        </div>
    </div>
</body>
</html>
